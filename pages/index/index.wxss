.shop-name {
  width: 750rpx;
  height: 200rpx;
  background-color: #ffffff;
  font-size: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.sale-order {
  width: 750rpx;
  height: auto;
  background-color: #ffffff;
  padding: 20rpx 20rpx;
  box-sizing: border-box;
}
.sale-order .form-item {
  /* padding: 10rpx 0; */
  margin: 10rpx 0;
}
.sale-order .form-item-title {
  font-size: 12px;
  color: #000000;
}
.sale-order .form-item-body {
  background-color: #ffffff;
}
.selector {
  height: 80rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.selector .selected-text {
  width: 100%;
  height: 100%;
}
.number-operator {
  width: 320rpx;
  height: 80rpx;
  border: 1rpx solid #cccccc;
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.number-operator .operator-tool {
  width: 80rpx;
  height: 80rpx;
  background-color: #cccccc;
  display: flex;
  justify-content: center;
  align-items: center;
}
.number-operator .operator-tool:active {
  background-color: #9c9a9a;
}
.number-operator .operator-text {
  width: 160rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.number-operator .operator-text input {
  text-align: center;
}
.btn-area {
  width: 750rpx;
  /* background-color: #ffffff; */
  padding-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}